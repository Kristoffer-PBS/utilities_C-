# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{cpp,h,hpp}]
charset = utf-8

# 4 space indentation
[*.{h,hpp,cpp}]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
